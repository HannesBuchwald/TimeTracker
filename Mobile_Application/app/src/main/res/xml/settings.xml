<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <PreferenceCategory
        android:title="User">
        <EditTextPreference
            android:key="@string/pref_key_user_user_id"
            android:summary="Set current user which is using the Smartphone"
            android:title="User_ID: " />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Connection">
        <Preference
            android:key="@string/pref_key_connection_send"
            android:summary="Send Logfile to Laptop"
            android:title="Sending" />
        <EditTextPreference
            android:key="@string/pref_key_connection_ip"
            android:summary="Set IP from Server"
            android:title="IP: " />
        <EditTextPreference
            android:key="@string/pref_key_connection_port"
            android:summary="Set Port from Server"
            android:title="IP: " />
    </PreferenceCategory>



    <PreferenceCategory
        android:title="Preferences"
        >
        <SwitchPreference
            android:key="@string/pref_key_preferences_editable_mode"
            android:summary="Enable Activity Editable Function in CalendarView"
            android:title="Editable Mode"
            />
        <EditTextPreference
            android:key="@string/pref_key_preferences_max_active_activities"
            android:summary="Amount of maximal active Activities"
            android:title="Max. active Activities: "
            />
        <Preference
            android:key="@string/pref_key_preferences_reset_activities"
            android:summary="Reset all - Images, LogFiles, Configuration"
            android:title="Reset all" />

        <Preference
            android:key="@string/pref_key_preferences_about"
            android:summary="Current Version 1.0"
            android:title="App Version"
            />

    </PreferenceCategory>


</PreferenceScreen>