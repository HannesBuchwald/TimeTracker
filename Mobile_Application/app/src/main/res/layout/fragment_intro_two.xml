<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.hdm.app.timetracker.screens.FragmentIntroTwo"
    android:rowCount="3"
    android:columnCount="3"
    android:padding="30dp"
    android:background="@color/green">

    <TextView
        android:id="@+id/intro_three_headline"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/intro_two_headline"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        />

    <!-- Name Age Wrapper -->
    <LinearLayout
        android:id="@+id/name_age_wrapper"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/intro_three_headline"
        >

        <!-- Name -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/white"
            android:layout_weight=".70"
            >

            <EditText
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/intro_two_hint_name"
                android:textColor="@color/white"
                />

        </android.support.design.widget.TextInputLayout>

        <!-- Age -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/white"
            android:layout_weight=".30"
            >

            <EditText
                android:id="@+id/input_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Age"
                android:textColor="@color/white"
                />

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>


    <!-- Gender -->
    <Spinner
        android:id="@+id/input_gender_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_age_wrapper"
        android:layout_marginTop="35dp"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        />

    <!-- Education -->
    <Spinner
        android:id="@+id/input_education_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_gender_spinner"
        android:layout_marginTop="35dp"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        />

    <!-- Tribe Household Wrapper -->
    <LinearLayout
        android:id="@+id/tribe_household_wrapper"
        android:layout_marginTop="55dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_education_spinner"
        >

        <!-- Tribe -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_tribe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/white"
            android:layout_weight=".50"
            >

            <EditText
                android:id="@+id/input_tribe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tribe"
                android:textColor="@color/white"
                />

        </android.support.design.widget.TextInputLayout>

        <!-- Household -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_household"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/white"
            android:layout_weight=".50"
            >

            <EditText
                android:id="@+id/input_household"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Household"
                android:textColor="@color/white"
                />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <!-- Size Weight Wrapper-->
    <LinearLayout
        android:id="@+id/size_weight_wrapper"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tribe_household_wrapper"
        >

        <!-- Tribe -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/white"
            android:layout_weight=".50"
            >

            <EditText
                android:id="@+id/input_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Size"
                android:textColor="@color/white"
                />

        </android.support.design.widget.TextInputLayout>

        <!-- Weight -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_weight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/white"
            android:layout_weight=".50"
            >

            <EditText
                android:id="@+id/input_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Weight"
                android:textColor="@color/white"
                />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>


</RelativeLayout>